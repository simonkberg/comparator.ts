{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "incremental": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": ["**/*", ".*"],
  "exclude": ["dist", "coverage"]
}
